#!/usr/bin/env bash

# download
wget 'https://gitlab.com/langitketujuh/script/-/raw/master/l7-export' -O /usr/bin/l7-export > /dev/null 2>&1;

# install
chmod +x /usr/bin/l7-export

# check
if ls -lh /usr/bin/l7-export > /tmp/checkers >/dev/null 2>&1; then
  echo -e "\033[1;36m[FINISH] l7-export is already installed.\033[0m"
  else
  echo -e "\033[1;33m[FAILED] l7-export is not already installed!\033[0m"
  exit;
fi
